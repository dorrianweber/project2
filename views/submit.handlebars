<form class="form habit-form">
    <p>Category:</p>
    <div class="form-group">
        <label for="type-eating">Eating</label>
        <input class="form-input" type="radio" id="type-eating" />
    </div>
    <div class="form-group">
        <label for="type-sleeping">Sleeping</label>
        <input class="form-input" type="radio" id="type-sleeping" />
    </div>
    <div class="form-group">
        <label for="type-spending">Spending</label>
        <input class="form-input" type="radio" id="type-spending" />
    </div>

    <div class="form-group">
        <label for="date">Date:</label>
        <input class="form-input" type="date" id="date" />
    </div>

    {{#if type-eating}}
    <div class="form-group">
        <label for="food-name">Food name:</label>
        <input class="form-input" type="text" id="food-name" />
    </div>

    <p>Meal type:</p>
    <div class="form-group">
        <label for="meal-breakfast">Breakfast</label>
        <input class="form-input" type="radio" id="meal-breakfast" />
    </div>
    <div class="form-group">
        <label for="meal-lunch">Lunch</label>
        <input class="form-input" type="radio" id="meal-lunch" />
    </div>
    <div class="form-group">
        <label for="meal-dinner">Dinner</label>
        <input class="form-input" type="radio" id="meal-dinner" />
    </div>
    <div class="form-group">
        <label for="meal-snack">Snack</label>
        <input class="form-input" type="radio" id="meal-snack" />
    </div>

    <div class="form-group">
        <label for="calories">Calories:</label>
        <input class="form-input" type="number" id="calories" />
    </div>
    <div class="form-group">
        <label for="protein">Protein (g):</label>
        <input class="form-input" type="number" id="protein" />
    </div>
    <div class="form-group">
        <label for="fat">Fat (g):</label>
        <input class="form-input" type="number" id="fat" />
    </div>
    <div class="form-group">
        <label for="carbs">Carbs (g):</label>
        <input class="form-input" type="number" id="carbs" />
    </div>

    {{else if type-sleeping}}
    <div class="form-group">
        <label for="sleep-hours">Hours slept:</label>
        <input class="form-input" type="number" id="sleep-hours" />
    </div>

    {{else if type-spending}}
    <div class="form-group">
        <label for="restaurant">Restaurant spending ($):</label>
        <input class="form-input" type="number" id="restaurant" />
    </div>
    <div class="form-group">
        <label for="coffee">Coffee spending ($):</label>
        <input class="form-input" type="number" id="coffee" />
    </div>
    <div class="form-group">
        <label for="bar">Bar spending ($):</label>
        <input class="form-input" type="number" id="bar" />
    </div>

    {{/if}}
</form>